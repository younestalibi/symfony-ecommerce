{% extends 'layout/user.html.twig' %}

{% block title %}List of Products
{% endblock %}

{% block main_content %}

	<section>
		<div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8">
			<header>
				<h2 class="text-xl font-bold text-gray-900 sm:text-3xl">Product Collection</h2>

				<p class="mt-4 max-w-md text-gray-500">
					Lorem ipsum, dolor sit amet consectetur adipisicing elit. Itaque praesentium cumque iure
																																																																																        dicta incidunt est ipsam, officia dolor fugit natus?
				</p>
			</header>

			<div class="mt-8 block lg:hidden">
				<button class="flex cursor-pointer items-center gap-2 border-b border-gray-400 pb-1 text-gray-900 transition hover:border-gray-600">
					<span class="text-sm font-medium">
						Filters & Sorting
					</span>

					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 rtl:rotate-180">
						<path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"/>
					</svg>
				</button>
			</div>

			<div class="mt-4 lg:mt-8 lg:grid lg:grid-cols-4 lg:items-start lg:gap-8">
				<div class="hidden space-y-4 lg:block">
					<form
						method="get" action="{{ path('app_frontend_product') }}">
						<!-- this hidden input is used to keep track of the query search-->
						<input type="hidden" name="q" value="{{ search }}"/>

						<div>
							<label for="SortBy" class="block text-xs font-medium text-gray-700">
								Sort By
							</label>

							<select id="SortBy" name="sort" class="mt-1 rounded-sm border-gray-300 text-sm">
								<option value="">Sort By</option>
								<option value="price_desc" {% if sort == 'price_desc' %} selected {% endif %}>Price, DESC</option>
								<option value="price_asc" {% if sort == 'price_asc' %} selected {% endif %}>Price, ASC</option>
							</select>
						</div>

						<div>
							<p class="block text-xs font-medium text-gray-700">Filters</p>

							<div class="mt-1 space-y-2">
								<details class="overflow-hidden rounded-sm border border-gray-300 [&_summary::-webkit-details-marker]:hidden">
									<summary class="flex cursor-pointer items-center justify-between gap-2 p-4 text-gray-900 transition">
										<span class="text-sm font-medium">
											Availability
										</span>

										<span class="transition group-open:-rotate-180">
											<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
												<path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"/>
											</svg>
										</span>
									</summary>


									<div class="border-t border-gray-200 bg-white">
										<ul class="space-y-1 border-t border-gray-200 p-4">
											<p>Availability</p>
											<label for="FilterAll" class="inline-flex items-center gap-2">
												<input type="radio" id="FilterAll" class="size-5 rounded-sm border-gray-300 shadow-sm" name="availability" value="" {% if filters.availability is empty %} checked {% endif %}>
												All</label>
											<label for="FilterInStock" class="inline-flex items-center gap-2">
												<input type="radio" id="FilterInStock" class="size-5 rounded-sm border-gray-300 shadow-sm" name="availability" value="in_stock" {% if filters.availability == 'in_stock' %} checked {% endif %}>
												<span class="text-sm font-medium text-gray-700">In Stock (5+)
												</span>
											</label>
											<label for="FilterPreOrder" class="inline-flex items-center gap-2">
												<input type="radio" id="FilterPreOrder" class="size-5 rounded-sm border-gray-300 shadow-sm" name="availability" value="pre_order" {% if filters.availability == 'pre_order' %} checked {% endif %}>
												<span class="text-sm font-medium text-gray-700">Pre Order (3+)
												</span>
											</label>
											<label for="FilterOutOfStock" class="inline-flex items-center gap-2">
												<input type="radio" id="FilterOutOfStock" class="size-5 rounded-sm border-gray-300 shadow-sm" name="availability" value="out_of_stock" {% if filters.availability == 'out_of_stock' %} checked {% endif %}>
												<span class="text-sm font-medium text-gray-700">Out of Stock (0)
												</span>
											</label>
										</ul>
									</div>
								</details>

								<details class="overflow-hidden rounded-sm border border-gray-300 [&_summary::-webkit-details-marker]:hidden">
									<summary class="flex cursor-pointer items-center justify-between gap-2 p-4 text-gray-900 transition">
										<span class="text-sm font-medium">
											Price
										</span>

										<span class="transition group-open:-rotate-180">
											<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
												<path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"/>
											</svg>
										</span>
									</summary>


									<div class="border-t border-gray-200 bg-white">
										<div class="border-t border-gray-200 p-4">
											<div class="flex justify-between gap-4">
												<label for="FilterPriceFrom" class="flex items-center gap-2">
													<span class="text-sm text-gray-600">$</span>
													<input type="number" min='0' name="price_from" id="FilterPriceFrom" class="w-full rounded-md border-gray-200 shadow-xs sm:text-sm" placeholder="From" value="{{ filters.price_from }}">
												</label>

												<label for="FilterPriceTo" class="flex items-center gap-2">
													<span class="text-sm text-gray-600">$</span>
													<input type="number" min='0' name="price_to" id="FilterPriceTo" placeholder="To" class="w-full rounded-md border-gray-200 shadow-xs sm:text-sm" value="{{ filters.price_to }}">
												</label>
											</div>
										</div>
									</div>
								</details>

							</div>
						</div>


						<button class="mt-4 w-full rounded-md border-2 border-transparent bg-gray-400 text-white bg-none px-12 py-3 text-center text-base font-bold transition-all duration-200 ease-in-out focus:shadow hover:bg-gray-500">
							Search
						</button>
					</form>

				</div>

				<div class="lg:col-span-3">
					<ul class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">

						{% for product in products %}
							<li>
								<a href={{ path("app_frontend_product_show",{"productId":product.id} ) }} class="group relative block overflow-hidden">
									<img src="{{ asset('uploads/' ~ product.image) }}" alt="{{ product.name }} image" class="h-64 w-full object-cover transition duration-500 group-hover:scale-105 sm:h-72"/>
									<div class="relative border border-gray-100 bg-white p-6">
										<span class="bg-yellow-400 px-3 py-1.5 text-xs font-medium whitespace-nowrap">
											New
										</span>
										<h3 class="mt-4 text-lg font-medium text-gray-900">{{ product.name }}</h3>
										<p class="mt-1.5 text-sm text-gray-700">${{ product.price }}</p>
										<form class="mt-4" method="post" action="{{ path('app_frontend_cart_add',{'productId':product.id}) }}" onclick="event.stopPropagation();">
											<button class=" cursor-pointer block w-full flex items-center justify-center rounded-md border-2 border-transparent bg-yellow-400 bg-none px-12 py-3 text-center text-base font-bold transition-all duration-200 ease-in-out focus:shadow hover:bg-yellow-500">
												<svg xmlns="http://www.w3.org/2000/svg" class="shrink-0 mr-3 h-5 w-5" fill="none" viewbox="0 0 24 24" stroke="currentColor" stroke-width="2">
													<path stroke-linecap="round" stroke-linejoin="round" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
												</svg>
												Add to cart
											</button>
										</form>
									</div>
								</a>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
