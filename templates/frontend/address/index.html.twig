{% extends 'layout/user.html.twig' %}
{% block title %}List of Cart items
{%
endblock %}
{% block main_content %}
    <h1>Address index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Line1</th>
                <th>Line2</th>
                <th>City</th>
                <th>Country</th>
                <th>ZipCode</th>
                <th>IsDefault</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.id }}</td>
                <td>{{ address.line1 }}</td>
                <td>{{ address.line2 }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.country }}</td>
                <td>{{ address.zipCode }}</td>
                <td>{{ address.isDefault ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_frontend_address_show', {'id': address.id}) }}">show</a>
                    <a href="{{ path('app_frontend_address_edit', {'id': address.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_frontend_address_new') }}">Create new</a>
{% endblock %}
