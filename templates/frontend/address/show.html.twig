{% extends 'layout/user.html.twig' %}
{% block title %}List of Cart items
{%
endblock %}
{% block main_content %}
    <h1>Address</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ address.id }}</td>
            </tr>
            <tr>
                <th>Line1</th>
                <td>{{ address.line1 }}</td>
            </tr>
            <tr>
                <th>Line2</th>
                <td>{{ address.line2 }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ address.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ address.country }}</td>
            </tr>
            <tr>
                <th>ZipCode</th>
                <td>{{ address.zipCode }}</td>
            </tr>
            <tr>
                <th>IsDefault</th>
                <td>{{ address.isDefault ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_frontend_address_index') }}">back to list</a>

    <a href="{{ path('app_frontend_address_edit', {'id': address.id}) }}">edit</a>

    {{ include('frontend/address/_delete_form.html.twig') }}
{% endblock %}
