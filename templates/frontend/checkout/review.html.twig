{% extends 'layout/user.html.twig' %}

{% block title %}Review Your Order
{% endblock %}

{% block main_content %}
	<h2 class="text-2xl font-bold mb-4">Review Your Order</h2>

	<div class="mb-6">
		<h3 class="text-lg font-semibold mb-2">Shipping Address</h3>
		<p>
			{{ order.shippingLine1 }}<br>
			{{ order.shippingLine2 }}<br>
			{{ order.shippingCity }},
			{{ order.shippingCountry }}
			{{ order.shippingZipCode }}
		</p>
	</div>

	<div class="mb-6">
		<h3 class="text-lg font-semibold mb-2">Order Items</h3>
		<ul>
			{% for item in order.orderItems %}
				<li class="mb-2">
					{{ item.productName }}
					x
					{{ item.quantity }}
					=
					<strong>€{{ (item.price * item.quantity)|number_format(2) }}</strong>
				</li>
			{% endfor %}
		</ul>
		<p class="mt-4 font-bold">Total: €{{ order.total|number_format(2) }}</p>
	</div>

	<a href="{{ stripe_url }}" class="inline-block bg-green-600 text-white py-2 px-4 rounded hover:bg-green-700">
		Pay with Stripe
	</a>
{% endblock %}
