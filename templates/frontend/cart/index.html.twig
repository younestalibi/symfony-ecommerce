{% extends 'layout/user.html.twig' %}

{% block title %}Shopping Cart
{% endblock %}

{% block main_content %}
	<div class="container mx-auto p-6" role="main" aria-labelledby="cart-title">
		<h2 id="cart-title" class="text-2xl font-bold mb-6">Shopping Cart</h2>

		<div
			class="grid grid-cols-1 md:grid-cols-3 gap-6">
			<!-- LEFT: Cart Items -->
			<section class="md:col-span-2" aria-label="Cart items list">
				<div class="space-y-4">
					{% set total = 0 %}
					{# current_cart is from extension #}
					{% set cart = current_cart()%}
					{% if cart and cart.cartItems|length > 0 %}
						{% for item in cart.cartItems %}
							{% set itemTotal = item.quantity * item.product.price %}
							{% set total = total + itemTotal %}
							<article class="bg-white p-4 rounded-lg shadow-sm flex items-start justify-between" role="group" aria-label="{{ item.product.name }}">
								<div>
									<div class="flex items-start gap-4 flex-grow">
										<img src="{{ asset('uploads/' ~ item.product.image) }}" alt="{{ item.product.name }}" class="w-20 h-20 object-cover rounded"/>
										<div>
											<header>
												<h3 class="text-lg font-semibold">{{ item.product.name }}</h3>
											</header>
											<p class="text-sm text-gray-500 mt-1">Price:
												<span class="font-semibold">${{ item.product.price|number_format(2) }}</span>
												each</p>
											<p class="text-sm text-gray-500 mt-1">Quantity:
												<span>{{ item.quantity }}</span>
											</p>


										</div>
									</div>
									<div>
										<form method="post" action="{{ path('app_frontend_cart_update', { id: item.id }) }}" class="mt-4 flex items-center gap-3" aria-label="Update quantity for {{ item.product.name }}">
											<label for="quantity-{{ item.id }}" class="sr-only">Quantity for
												{{ item.product.name }}</label>
											<input type="number" id="quantity-{{ item.id }}" name="quantity" min="0" max="{{ item.product.quantity }}" value="{{ item.quantity }}" class="w-20 border rounded px-2 py-1 focus:outline-blue-500" aria-live="polite"/>
											<button type="submit" class="bg-blue-600 text-white px-4 py-1 rounded hover:bg-blue-700 transition focus:outline-none focus:ring-2 focus:ring-blue-500">
												Update
											</button>
										</form>

										<form method="post" action="{{ path('app_frontend_cart_delete', { id: item.id }) }}" onsubmit="return confirm('Are you sure you want to remove this item?');" class="mt-2">
											<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}"/>
											<button type="submit" class="text-red-600 hover:text-red-800 text-sm focus:outline-none focus:underline" aria-label="Remove {{ item.product.name }} from cart">
												Remove Item
											</button>
										</form>
									</div>
								</div>

								<div class="text-right font-bold text-lg text-blue-600 self-center ml-6 whitespace-nowrap">
									${{ itemTotal|number_format(2) }}
								</div>
							</article>
						{% endfor %}

					{% else %}
						<p class="text-gray-600">Your cart is empty.</p>
					{% endif %}
				</div>
			</section>

			<!-- RIGHT: Summary -->
			<aside class="bg-white p-6 rounded-lg shadow-md" aria-label="Cart summary">
				<h4 class="text-xl font-bold mb-4">Cart Summary</h4>

				{% if cart and cart.cartItems|length > 0 %}
					<div class="border-t pt-4 text-gray-800">
						<p class="text-sm text-gray-600 mb-2">Items:
							{{ cart.cartItems|length }}</p>
						<p class="text-lg font-bold">Subtotal: ${{ total|number_format(2) }}</p>
					</div>

					<a href="{{ path('app_frontend_checkout') }}" class="mt-6 block w-full text-center bg-blue-600 text-white py-3 rounded hover:bg-blue-700 transition focus:outline-none focus:ring-2 focus:ring-blue-500">
						Proceed to Checkout
					</a>
				{% else %}
					<p class="text-gray-600">Your cart is empty.</p>
				{% endif %}
			</aside>
		</div>
	</div>
{% endblock %}
