{% extends 'layout/user.html.twig' %}
{% block title %}List of Cart items
{%
endblock %}
{% block main_content %}
	<div class="container mx-auto p-6">
		<h2 class="text-2xl font-bold mb-6">Shopping Cart</h2>

		<div
			class="grid grid-cols-1 md:grid-cols-3 gap-6">
			<!-- LEFT: Cart Items -->
			<div class="md:col-span-2">
				<div class="space-y-4">
					{% set total = 0 %}
					{% if cart %}
						{% for item in cart.cartItems %}
							{% set itemTotal = item.quantity * item.product.price %}
							{% set total = total + itemTotal %}
							<div class="bg-white p-4 rounded-lg shadow-sm flex items-start justify-between">
								<div>
									<h3 class="text-lg font-semibold">{{ item.product.name }}</h3>
									<p class="text-sm text-gray-500">Quantity:
										{{ item.quantity }}</p>
									<p class="text-sm font-semibold mt-2">
										${{ item.product.price|number_format(2) }}
										each
									</p>
									<div>
										<form class="mt-2" method="post" action="{{ path('app_frontend_cart_update', { id: item.id }) }}">
											<input type="number" name="quantity" min="0" max="{{ item.product.quantity }}" value="{{ item.quantity }}" class="w-16 border rounded px-2 py-1"/>
											<button type="submit" class="bg-blue-600 text-white px-4 py-1 rounded hover:bg-blue-700 transition">
												Update
											</button>
										</form>
										<form method="post" action="{{ path('app_frontend_cart_delete', { id: item.id }) }}" onsubmit="return confirm('Are you sure you want to remove this item?');">
											<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}"/>
											<button type="submit" class="text-red-600 hover:text-red-800 text-sm">
												Remove Item
											</button>
										</form>
									</div>
								</div>
								<div class="text-right font-bold text-lg text-blue-600">
									${{ itemTotal|number_format(2) }}
								</div>
							</div>
						{% endfor %}
					{% else %}
						<p>Your cart is empty.</p>
					{% endif %}
				</div>
			</div>

			<!-- RIGHT: Summary -->
			<div class="bg-white p-6 rounded-lg shadow-md">
				<h4 class="text-xl font-bold mb-4">Cart Summary</h4>

				{% if cart %}
					<div class="border-t pt-4 text-gray-800">
						<p class="text-sm text-gray-600 mb-2">
							Items:
							{{ cart.cartItems | length }}
						</p>
						<p class="text-lg font-bold">Subtotal: ${{ total|number_format(2) }}</p>
					</div>

					<a href="{{ path('app_frontend_checkout') }}" class="mt-6 w-full bg-blue-600 text-white py-3 rounded hover:bg-blue-700 transition">
						Proceed to Checkout
					</a>
				{% else %}
					<p>Your cart is empty.</p>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
