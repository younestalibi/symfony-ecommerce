{% extends 'base.html.twig' %}

{% block title %}Reset your password
{% endblock %}

{% block body %}
	<div class="min-h-screen flex items-center justify-center bg-gray-100">
		<div class="w-full max-w-md bg-white shadow-lg rounded-2xl p-8 space-y-6">

			{% for flash_error in app.flashes('reset_password_error') %}
				<div class="bg-red-100 text-red-700 px-4 py-3 rounded relative text-sm">
					{{ flash_error }}
				</div>
			{% endfor %}

			<h1 class="text-2xl font-bold text-gray-800 text-center">
				Reset your password
			</h1>

			<div class="text-sm text-gray-600 text-center">
				Enter your email address, and we will send you a link to reset your password.
			</div>

			{{ form_start(requestForm, {'attr': {'class': 'space-y-5'}}) }}
			{{ form_widget(requestForm) }}
			<button class="w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md transition duration-150" type="submit">
				Send password reset email
			</button>
			{{ form_end(requestForm) }}

		</div>
	</div>
{% endblock %}
