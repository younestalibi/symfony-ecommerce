{% extends 'layout/admin.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block main_content %}
  <h1 class="text-3xl font-semibold mb-6">Admin Dashboard</h1>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <div class="p-6 bg-gray-100 rounded-lg shadow">
        <h2 class="text-4xl font-bold text-gray-800">{{ totalUsers }}</h2>
        <p class="text-gray-600 mt-2">Total Users</p>
      </div>
      <div class="p-6 bg-gray-100 rounded-lg shadow">
        <h2 class="text-4xl font-bold text-gray-800">{{ totalProducts }}</h2>
        <p class="text-gray-600 mt-2">Total Products</p>
      </div>
      <div class="p-6 bg-gray-100 rounded-lg shadow">
        <h2 class="text-4xl font-bold text-gray-800">{{ totalOrders }}</h2>
        <p class="text-gray-600 mt-2">Total Orders</p>
      </div>
      <div class="p-6 bg-gray-100 rounded-lg shadow">
        <h2 class="text-4xl font-bold text-gray-800">${{ totalRevenue|number_format(2, '.', ',') }}</h2>
        <p class="text-gray-600 mt-2">Total Revenue</p>
      </div>
      <div class="p-6 bg-gray-100 rounded-lg shadow">
        <h2 class="text-4xl font-bold text-gray-800">{{ totalCategories }}</h2>
        <p class="text-gray-600 mt-2">Total Categories</p>
      </div>
    </div>
  </div>
{% endblock %}
