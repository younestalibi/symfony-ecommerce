<form method="post" action="{{ path('app_admin_product_management_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
	<button class="text-sm text-red-600 hover:underline bg-transparent border-none p-0 m-0 cursor-pointer font-normal">
		Delete
	</button>
</form>
